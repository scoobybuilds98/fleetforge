# ============================================================================
# FLEETFORGE ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
# For AWS Lightsail or local PostgreSQL
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://fleetforge_user:Fleet@2024!@localhost:5432/fleetforge"

# ============================================================================
# AUTHENTICATION (Auth0)
# ============================================================================
# You'll set these up in Week 1, Day 3
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.fleetforge.com

# ============================================================================
# JWT SECRET
# ============================================================================
# Generate a random string for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================================================
# AWS CONFIGURATION (For file storage)
# ============================================================================
# You'll set these up in Week 2
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=fleetforge-documents

# ============================================================================
# EMAIL CONFIGURATION (AWS SES)
# ============================================================================
# You'll set these up in Week 3
EMAIL_FROM=noreply@fleetforge.com
EMAIL_REPLY_TO=support@fleetforge.com

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
# Samsara GPS - Week 13
SAMSARA_API_KEY=your-samsara-api-key
SAMSARA_BASE_URL=https://api.samsara.com

# QuickBooks - Week 14
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REDIRECT_URI=http://localhost:3001/api/v1/quickbooks/callback

# ============================================================================
# SECURITY
# ============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session secret
SESSION_SECRET=your-session-secret-change-this

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log
